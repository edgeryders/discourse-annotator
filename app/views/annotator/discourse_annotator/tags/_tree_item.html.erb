<li id="code-row-<%= tag.id %>">
  <% if params[:view] != 'translate' %>
    <input type="checkbox" id="code-<%= tag.id %>" data-id="<%= tag.id %>"/>
  <% end %>

<!--  <span style="<%#= 'opacity: 0.5' if no_match %>">-->
  <span>
    <% if tag.children.any? %>
        <i class="fa fa-minus-circle" style="color:#aaa;"></i>
    <% end %>
    <% dc = tag.descendants_annotations_count %>
    <strong class="item" title="<%= "#{tag.annotations_count} annotations use this code#{" + #{dc} descendant annotations use this code" if dc > 0}." %>">
      <%= tag.name %>
      <%= "(#{tag.annotations_count}#{" + #{dc}" if dc > 0 })" %>
    </strong>
  </span>
  <%# "by #{tag.creator.username}" unless params[:creator_id].present? %>
  <%= "by #{tag.creator.username}" %>
  <%= link_to('Show', [namespace, tag], class: "action-edit") %> |
  <%= link_to('Edit', [:edit, namespace, tag], class: "action-edit",) %> |
  <%= link_to('Annotations', annotator_discourse_annotator_annotations_path(code_id: tag.id), class: "action-edit",) %> |
  <%= link_to('Merge', merge_annotator_discourse_annotator_tag_path(tag.id), class: "action-edit") %> |
  <%= link_to('Copy', copy_annotator_discourse_annotator_tag_path(tag.id), method: :put, class: "action-edit") %>
  <% if tag.is_childless? %>
    |
    <%= render 'action_delete', namespace: namespace, tag: tag %>
  <% end %>

  <% if tag.children.any? %>
    <% children = tag.children.with_localized_tags(language: DiscourseAnnotator::UserSetting.language_for_user(current_user))
       children = order_tags(tags: children, order: params[:order])
    %>

    <ul>
      <% children.each do |tag| %>
        <%= render 'tree_item', tag: tag %>
      <% end %>
    </ul>
  <% end %>
</li>